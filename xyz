  spcialProducts.forEach(product => {
      const card = document.createElement("div");
      card.className = "special-product-card";
      card.innerHTML = `
        <img src="${product.image}" alt="${product.name}" />
        <h3>${product.name}</h3>
        <p>${product.price}</p>
      `;
      specialProductList.appendChild(card);
    });


    dealofDay.forEach(product => {
      const card = document.createElement("div");
      card.className = "product-card";
      card.innerHTML = `
        <img src="${product.image}" alt="${product.name}" />
        <h3>${product.name}</h3>
        <p>${product.price}</p>
      `;
      dealOfDayProduct.appendChild(card);
    });








